@model IEnumerable<Client_RealtorAssistant.Models.Asset>

@{
    ViewData["Title"] = "Sold Properties";
}

<div class="row mt-5">
    <div class="col-6">
        <h2>Record of Sold Properties</h2>
    </div>
    <div class="col-2 offset-4 align-text-bottom">
        <a asp-action="AssetIndex" class="text-danger backBtn align-text-bottom" style="font-size: 20px; font-weight: 500; text-decoration: none;">Back</a>
    </div>
</div>
<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Owned
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isSold)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isOwned)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isSold)
                </td>
            </tr>
        }
    </tbody>
</table>
