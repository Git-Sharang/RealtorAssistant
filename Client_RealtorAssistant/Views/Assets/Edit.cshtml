@model Client_RealtorAssistant.Models.Asset

@{
    ViewData["Title"] = "Edit";
}

<div class="row my-5">
    <div class="col-8 offset-2">
        <div class="card addPropertyCard">
            <div class="card-body">
                <div class="row mx-3 mt-2">
                    <div class="col text-center">
                        <h3>Edit Property</h3>
                    </div>
                </div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    <div class="row mt-4 mx-2">
                        <div class="col">
                            <div class="form-group">
                                <input asp-for="Name" class="form-control addPropertyInput" placeholder="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <input asp-for="Type" class="form-control addPropertyInput" placeholder="Type" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-1 mx-2">
                        <div class="col">
                            <div class="form-group">
                                <input asp-for="Address" class="form-control addPropertyInput" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-1 mx-2">
                        <div class="col-4">
                            <hr />
                            <div class="text-secondary" style="font-size: 11px; padding-top: 0px; margin-top:0px;">
                                Select if either apply
                            </div>
                        </div>
                    </div>
                    <div class="row mt-1 mx-2">
                        <div class="col">
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="isOwned" /> Owned
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="isSold" /> @Html.DisplayNameFor(model => model.isSold)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col text-center">
                            <input type="submit" value="UPDATE" class="btn btn-primary rounded px-5 py-1" style="font-size: 14px; font-weight: 500;" />
                            <a asp-action="AssetIndex" class="text-danger backBtn ml-2" style="font-size: 20px; font-weight: 500;">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
