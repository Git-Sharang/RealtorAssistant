@model Client_RealtorAssistant.Models.Realtors

@{
    ViewData["Title"] = "Welcome Realtor";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/HomePageStyle.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <title>Realtor Assistant</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="RealtorLogin" class="sign-in-form">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" asp-for="Username" placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" asp-for="Password" placeholder="Password" />
                    </div>
                    <input type="submit" id="error" value="Login" class="btn solid" data-value = "@ViewBag.result" />

                </form>
                <form asp-action="RealtorRegister" class="sign-up-form">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" asp-for="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" asp-for="Password" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="First Name" asp-for="Firstname" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Last Name" asp-for="Lastname" />
                    </div>
                    <input type="submit" class="btn" value="Sign up" id="error" data-value = "@ViewBag.result" />
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Register today to access the benefits of viewing and saving your Real Estate properties.
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/img/zawar transparent.png" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        If you already have an account with us, please sign in!
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/images/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/js/HomePagejs.js"></script>
    <script type="text/javascript">
        console.log('@ViewBag.result');
        var error = '@ViewBag.result';
        if (error) {
            Swal.fire({
                title: 'Error!',
                text: error,

            })
        }
      
    </script>
</body>
</html>


